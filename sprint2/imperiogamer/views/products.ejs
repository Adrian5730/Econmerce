<!DOCTYPE html>
<html>
  <%- include('./partials/head') %> 
  <link href="/stylesheets/productoAdmin.css" rel="stylesheet">
  <body>
    <%- include('./partials/header') %>
    
    <div class="row">
      <div class="col-12 categorias">
        <ul>
          <li><a href="#juegos">Juegos</a></li>
          <li><a href="#consolas">Consolas</a></li>
          <li><a href="#pcGamer">Pc Gamer</a></li>
          <li><a href="#sillas">Sillas</a></li>
          <li><a href="#accesorios">Accesorios</a></li>
        </ul>
      </div>
    </div>
    <div class="row">
      <div class="col-12">
        <h3 id="juegos">Juegos</h3>
      </div>
      <%juegos.forEach(function(juegos){%>
        <div class="col-lg-3 col-md-4 col-sm-6 col-12">
          <a href="/products/<%= juegos.id %> ">
            <div>
              <h5><%= juegos.product_name %> </h5>
              <img width="300" height="200" class="producto-img" src="/images/productos/<%= juegos.image %>" alt="<%= juegos.product_name %> ">
              <div class="precio">
                <span>$<%= aMiles(juegos.price) %> </span>
                <% if (juegos.discount > 0) { %>
                  <span><%= juegos.discount %>% OFF</span>
                <% } %>
              </div>
            </div>
          </a>
        </div>
      <% });%> 
    </div>
    <div class="row">
      <div class="col-12">
        <h3 id="consolas">Consolas</h3>
