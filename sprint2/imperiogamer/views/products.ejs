                <% } %>
              </div>
            </div>
          </a>
        </div>
      <% });%> 
    </div>
    <div class="row">
      <div class="col-12">
        <h3 id="accesorios">Accesorios</h3>
      </div>
      <%accesorios.forEach(function(acc){%>
        <div class="col-lg-3 col-md-4 col-sm-6 col-12">
